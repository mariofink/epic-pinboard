{
  "manifest_version": 2,
  "name": "Pinboard++",
  "description": "Browser extension for Pinboard.in",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png"
  },
  "background": {
    "scripts": ["background_script.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_script.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "browserAction/index.html",
    "default_title": "Pinboard++"
  },
  "page_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "pageAction/index.html",
    "default_title": "Pinboard++"
  },
  "options_ui": {
    "page": "options/index.html"
  },
  "permissions": ["<all_urls>"]
}
